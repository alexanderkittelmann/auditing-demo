<?xml version="1.0" encoding="UTF-8"?>

<persistence
  xmlns="http://xmlns.jcp.org/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
  version="2.1">

  <persistence-unit
    name="pace"
    transaction-type="JTA">

    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <jta-data-source>jdbc/pace</jta-data-source>

    <class>de.gedoplan.pace.abrechnung.domain.Aufgabe</class>
    <class>de.gedoplan.pace.abrechnung.domain.AufgabeMitarbeiter</class>
    <class>de.gedoplan.pace.abrechnung.domain.Projekt</class>
    <class>de.gedoplan.pace.abrechnung.domain.Buchungsmonat</class>
    <class>de.gedoplan.pace.abrechnung.domain.ProjektZeit</class>
    <class>de.gedoplan.pace.container.mandant.BenutzerRolle</class>
    <class>de.gedoplan.pace.container.mandant.Berechtigung</class>
    <class>de.gedoplan.pace.firma.domain.AnsprechpartnerMandantStatus</class>
    <class>de.gedoplan.pace.firma.domain.Branche</class>
    <class>de.gedoplan.pace.firma.domain.Firma</class>
    <class>de.gedoplan.pace.firma.domain.GeschaeftsBereich</class>
    <class>de.gedoplan.pace.firma.domain.GeschaeftsTaetigkeit</class>
    <class>de.gedoplan.pace.firma.domain.Interesse</class>
    <class>de.gedoplan.pace.firma.domain.Kennzeichen</class>
    <class>de.gedoplan.pace.firma.domain.Kontakt</class>
    <class>de.gedoplan.pace.firma.domain.Land</class>
    <class>de.gedoplan.pace.firma.domain.Mitarbeiter</class>
    <class>de.gedoplan.pace.firma.domain.Person</class>
    <class>de.gedoplan.pace.firma.domain.Position</class>
    <class>de.gedoplan.pace.firma.domain.Standort</class>
    <class>de.gedoplan.pace.firma.domain.Titel</class>
    <class>de.gedoplan.pace.firma.domain.Wiedervorlage</class>
    <class>de.gedoplan.pace.schulung.domain.Bestellposition</class>
    <class>de.gedoplan.pace.schulung.domain.Bestellung</class>
    <class>de.gedoplan.pace.schulung.domain.Kurs</class>
    <class>de.gedoplan.pace.schulung.domain.Reservierung</class>
    <class>de.gedoplan.pace.schulung.domain.Restaurant</class>
    <class>de.gedoplan.pace.schulung.domain.Schulung</class>
    <class>de.gedoplan.pace.schulung.domain.Speise</class>
    <class>de.gedoplan.pace.schulung.domain.Speisekarte</class>
    <class>de.gedoplan.pace.schulung.domain.Teilnehmer</class>
    <class>de.gedoplan.pace.schulung.domain.TeilnehmerRolle</class>
    <class>de.gedoplan.pace.schulung.domain.Txt</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <shared-cache-mode>NONE</shared-cache-mode>
    <validation-mode>NONE</validation-mode>

    <properties>
      <property
        name="hibernate.hbm2ddl.auto"
        value="update" />
      <property
        name="hibernate.id.new_generator_mappings"
        value="true" />
      <property
        name="hibernate.show_sql"
        value="true" />
      <property
        name="hibernate.dialect"
        value="org.hibernate.dialect.MySQLDialect" />
      <property
        name="hibernate.default_batch_fetch_size"
        value="8" />
    </properties>

  </persistence-unit>

  <persistence-unit
    name="obs40"
    transaction-type="JTA">

    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <jta-data-source>jdbc/obs40</jta-data-source>

    <class>de.gedoplan.pace.migration.table.O40Abteilung</class>
    <class>de.gedoplan.pace.migration.table.O40AktuelleSchluessel</class>
    <class>de.gedoplan.pace.migration.table.O40Anrede</class>
    <class>de.gedoplan.pace.migration.table.O40ArtInteresse</class>
    <class>de.gedoplan.pace.migration.table.O40Besuch</class>
    <class>de.gedoplan.pace.migration.table.O40Besuchmandant</class>
    <class>de.gedoplan.pace.migration.table.O40Branche</class>
    <class>de.gedoplan.pace.migration.table.O40Branchefirma</class>
    <class>de.gedoplan.pace.migration.table.O40Entfernung</class>
    <class>de.gedoplan.pace.migration.table.O40Firma</class>
    <class>de.gedoplan.pace.migration.table.O40Firmenstatus</class>
    <class>de.gedoplan.pace.migration.table.O40GfBereich</class>
    <class>de.gedoplan.pace.migration.table.O40Interesse</class>
    <class>de.gedoplan.pace.migration.table.O40Land</class>
    <class>de.gedoplan.pace.migration.table.O40Mandant</class>
    <class>de.gedoplan.pace.migration.table.O40Partner</class>
    <class>de.gedoplan.pace.migration.table.O40Position</class>
    <class>de.gedoplan.pace.migration.table.O40Status</class>
    <class>de.gedoplan.pace.migration.table.O40Titel</class>
    <class>de.gedoplan.pace.migration.table.O40User</class>
    <class>de.gedoplan.pace.migration.table.O40Usermandant</class>
    <class>de.gedoplan.pace.migration.table.O40WvBesuch</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <shared-cache-mode>NONE</shared-cache-mode>

    <properties>
      <property
        name="hibernate.hbm2ddl.auto"
        value="update" />
      <property
        name="hibernate.id.new_generator_mappings"
        value="true" />
      <property
        name="hibernate.show_sql"
        value="true" />
      <property
        name="hibernate.dialect"
        value="org.hibernate.dialect.MySQLDialect" />
      <property
        name="hibernate.default_batch_fetch_size"
        value="8" />
    </properties>

  </persistence-unit>

</persistence>